{
  "manifest_version": 3,
  "name": "Harmonix",
  "version": "1.0",
  "description": "Elevate your web browsing experience",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "128": "images/Harmonix_Logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/Harmonix_Logo.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://localhost:8000/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["constants.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["constants.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; font-src 'self' https://fonts.gstatic.com; style-src 'self' https://fonts.googleapis.com 'unsafe-inline'"
  }
}